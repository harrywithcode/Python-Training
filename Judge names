# Compute whether a person is cool.

###################################################

def is_cool(name):
	"""Returns whether the person is cool."""
	
	return (name == "Joe") or (name == "John") or (name == "Stephen")




def test(name):
	
	
	if is_cool(name):
		print name, "is cool."
	else:
		print name, "is not cool."

test("Joe")
test("John")
test("Stephen")
test("Scott")

